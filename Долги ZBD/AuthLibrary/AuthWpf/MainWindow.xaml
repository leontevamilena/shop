<Window x:Class="AuthWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightBlue">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="LightPink"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="White"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Логин"  Width="120" />
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Width="120"/>
        <Label Content="Пароль" Width="120" />
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Width="120"/>
        <Label/>
        <Button x:Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click" />
        <Button x:Name="AuthenticateButton" Content="Авторизация" Click="AuthenticateButton_Click"/>
    </StackPanel>
</Window>
